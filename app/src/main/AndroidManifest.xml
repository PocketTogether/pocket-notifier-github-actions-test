<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ⭐ 必须：前台服务权限（Android 9+ 要求） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- ⭐ 必须：你声明了 dataSync 类型，就必须加这个 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- ⭐ 必须：网络权限（OkHttp 需要） -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 应用名，应修改 -->
    <application
        android:label="PocketNotifier"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.PocketNotifier">

        <!-- MainActivity（入口 Activity） -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- ForegroundService 声明（Android 13+ 需要 type） -->
        <service
            android:name=".service.PollingService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>
